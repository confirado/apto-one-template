{
	"singleQuote": true,
	"htmlWhitespaceSensitivity": "strict",
	"printWidth": 140,
	"trailingComma": "es5",
	"tabWidth": 4,
	"useTabs": false,
	"semi": true,
	"bracketSpacing": true,
  "overrides": [
    {
      "files": ["*.ts", "*.json"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
